{
    "name": "diplomate-frontend",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "description": "Frontend application for Diplomate platform",
    "license": "UNLICENSED",
    "packageManager": "pnpm@8.6.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/Gb16702/diplomate-frontend.git"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.6.1"
    },
    "scripts": {
        "dev": "node server",
        "build": "pnpm run build:client && pnpm run build:server",
        "build:client": "vite build --outDir dist/client",
        "build:server": "vite build --ssr src/entry-server.ts --outDir dist/server",
        "preview": "cross-env NODE_ENV=production node server",
        "check": "vue-tsc",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint src --ext .vue,.js,.ts",
        "lint:fix": "eslint src --ext .vue,.js,.ts --fix",
        "fix": "pnpm run lint:fix && prettier --write .",
        "type-check": "vue-tsc --noEmit",
        "chromatic": "chromatic"
    },
    "dependencies": {
        "@fontsource/dm-sans": "^5.2.6",
        "@fontsource/playfair-display": "^5.2.6",
        "@fontsource/rubik": "^5.2.6",
        "@fontsource/space-grotesk": "^5.2.8",
        "@storybook/test": "^8.6.14",
        "class-variance-authority": "^0.7.1",
        "compression": "^1.8.0",
        "express": "^5.0.1",
        "sirv": "^3.0.1",
        "vue": "^3.5.13"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "4",
        "@eslint/js": "^9.28.0",
        "@storybook/addon-a11y": "9.0.6",
        "@storybook/addon-docs": "9.0.6",
        "@storybook/addon-onboarding": "9.0.6",
        "@storybook/addon-vitest": "9.0.6",
        "@storybook/vue3-vite": "9.0.6",
        "@types/express": "^5.0.0",
        "@types/node": "^22.13.4",
        "@typescript-eslint/eslint-plugin": "^8.33.1",
        "@typescript-eslint/parser": "^8.33.1",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vitest/browser": "^3.2.3",
        "@vitest/coverage-v8": "^3.2.3",
        "chromatic": "^13.0.1",
        "cross-env": "^7.0.3",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-vue": "^10.2.0",
        "globals": "^16.2.0",
        "lint-staged": "^16.1.0",
        "playwright": "^1.52.0",
        "prettier": "^3.5.3",
        "storybook": "9.0.6",
        "typescript": "~5.7.3",
        "vite": "^6.3.5",
        "vitest": "^3.2.3",
        "vue-eslint-parser": "^10.1.3",
        "vue-tsc": "^2.2.2"
    }
}
